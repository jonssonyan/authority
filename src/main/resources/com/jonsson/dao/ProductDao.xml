<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jonsson.dao.ProductDao">
    <resultMap id="productMap" type="com.jonsson.entity.Product">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="state" property="state"/>
        <result column="category_id" property="categoryId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    <insert id="productInsert">
        insert into product(`name`,price,state,category_id)values
            (#{product.name},#{product.price},#{product.state},#{product.categoryId})
    </insert>
    <delete id="productDeleteByIds">
        delete from product where id in
        <foreach collection="ids" open="(" separator="," close=")" item="item">
            #{item}
        </foreach>
    </delete>
    <update id="productUpdateById">
        update product
        <set>
            <if test="product.name != null and product.name!=''">
                `name` = #{product.name}
            </if>
            <if test="product.price != null">
                , price = #{product.price}
            </if>
            <if test="product.state != null">
                , state = #{product.state}
            </if>
            <if test="product.categoryId != null">
                , category_id = #{product.categoryId}
            </if>
            <if test="product.createTime != null">
                , create_time = #{product.createTime}
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>